package estrutura_condicional;

import java.util.Locale;
import java.util.Scanner;

public class Temperatura {

	public static void main(String[] args) {
		

		Locale.setDefault(Locale.US);
		Scanner sc = new Scanner(System.in);
		double temperatura;
		char escala;
		double f;
		double c;
		
		System.out.println("Você vai digitar a temperatura em qual escala (C/F)?");
		escala = (char)System.in.read(c,f);
		
			if ( escala == f) {
			temperatura =  5/9*(f-32);
				System.out.println("Temperatura equivalente em Celsius: " + temperatura);
			}else {
				temperatura = 9 * c/5 +32;
			}
	}

}
