package estrutura_sequencial;

import java.util.Locale;
import java.util.Scanner;

public class Medidas {

	public static void main(String[] args) {
		Locale.setDefault(Locale.US);
		Scanner sc = new Scanner(System.in);
		
		System.out.println("Digite a medida A: ");
		System.out.println("Digite a medida B: ");
		System.out.println("Digite a medida C: ");
		
		
		
		System.out.println("AREA DO QUADRADO = ");
		System.out.println("AREA DO TRIANGULO = ");
		System.out.println("AREA DO TRAPEZIO = ");
		sc.close();
	}

}

//Problema "medidas" 
//Fazer um programa para ler três medidas A, B e C. Em seguida, calcular e mostrar (imprimir os dados 
//com quatro casas decimais): 
//a) a área do quadrado que tem lado A 
//b) a área do triângulo retângulo que base A e altura B 
//c) a área do trapézio que tem bases A e B, e altura C 
//Exemplo 1: 
//Digite a medida A: 4.0
//Digite a medida B: 3.5
//Digite a medida C: 5.2
//AREA DO QUADRADO = 16.0000 
//AREA DO TRIANGULO = 7.0000 
//AREA DO TRAPEZIO = 19.5000 